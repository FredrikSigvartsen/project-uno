;(function ($) {

  var pusher = new Pusher('0d846fc26187e9741029');
  var channel = pusher.subscribe('game');

  pusher.connection.bind('connected', function () {
    var socket_id = pusher.connection.socket_id;

    $('#socket_id').val(socket_id);
  });

  channel.bind('card_drawn', function (data) {
    $('#hand').append('<%= image_tag "cards/card_' + data.card_id + '.png", :id => "card" %>');
}(jQuery));

